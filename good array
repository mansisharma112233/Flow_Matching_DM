import sys

data = sys.stdin.read().split()
idx = 0

t = int(data[idx])
idx += 1

for _ in range(t):
    n = int(data[idx])
    idx += 1

    a = list(map(int, data[idx:idx+n]))
    idx += n

    ops = 0
    for i in range(n-1):
        if (a[i] % 2) == (a[i+1] % 2):
            ops += 1

    print(ops)
